<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.connxun.ttdj.widget.AppTitle
            style="@style/title_style"
            app:showBack="true"
            app:canFinish="true"
            app:centreText="注册"
            app:centreTextColor="@color/white" />
    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rect_blue_stroke_corner"
        android:hint="手机号码"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLength="11"
        android:textColorHint="@color/text_hint"
        android:textSize="15dp"
        android:textColor="@color/text_black"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/shape_rect_blue_stroke_corner"
        android:hint="设置密码"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_black"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />
    <EditText
        android:id="@+id/et_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rect_blue_stroke_corner"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_black"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        >
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_captchacode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/shape_rect_blue_stroke_corner"
            android:hint="输入验证码"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_weight="1"
            android:id="@+id/getcaptcha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_blue_shape"
            android:gravity="center"
            android:singleLine="true"
            android:text="获取验证码 "
            android:textColor="@color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_blue_shape"
        android:gravity="center"
        android:singleLine="true"
        android:text="注册 "
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:buttonTint="@drawable/radio_group_selector"
            android:text="我已阅读并同意《乐挑促销服务条款》"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            />

    </LinearLayout>
</LinearLayout>
